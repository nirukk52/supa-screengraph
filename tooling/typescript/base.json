{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"allowJs": true,
		"composite": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"inlineSources": false,
		"isolatedModules": true,
		"module": "node16",
		"target": "ES2022",
		"moduleResolution": "node16",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"paths": {
			"@repo/database": ["../../packages/database"],
			"@repo/database/*": ["../../packages/database/*"],
			"@repo/database/prisma/*": ["../../packages/database/prisma/*"],
			"@sg/feature-agents-run": ["../../packages/features/agents-run"],
			"@sg/queue": ["../../packages/queue"],
			"@sg/queue-bullmq": ["../../packages/queue-bullmq"],
			"@sg/queue-inmemory": ["../../packages/queue-inmemory"]
		}
	},
	"display": "Default",
	"exclude": ["node_modules", "dist", ".next", "build"]
}
