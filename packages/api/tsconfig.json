{
	"extends": "../../tooling/typescript/react-library.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": ".",
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": false,
		"composite": true,
		"paths": {
			"@sg/feature-agents-run": ["../features/agents-run/src/index.ts"]
		}
	},
	"include": ["index.ts", "lib/**/*.ts", "modules/**/*.ts", "orpc/**/*.ts"],
	"exclude": ["dist", "build", "node_modules", "tests"],
	"references": [
		{ "path": "../features/agents-run" }
	]
}
