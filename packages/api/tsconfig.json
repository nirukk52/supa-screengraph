{
	"extends": "../../tooling/typescript/react-library.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": ".",
		"outDir": "dist",
		"declaration": true,
		"emitDeclarationOnly": false,
		"composite": true
	},
	"include": ["index.ts", "lib/**/*.ts", "modules/**/*.ts", "orpc/**/*.ts", "src/**/*.ts"],
	"exclude": ["dist", "build", "node_modules", "tests"]
}
