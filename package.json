{
	"name": "supastarter-nextjs",
	"private": true,
	"scripts": {
		"build": "npx dotenv-cli -c -- turbo build",
		"dev": "npx dotenv-cli -c -- turbo dev --concurrency 15",
		"dev:restart": "node tooling/scripts/dev-restart.js",
		"start": "npx dotenv-cli -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"test": "pnpm -r --if-present test",
		"test:affected": "node tooling/scripts/test/affected.ts",
		"prepare": "husky",
		"lint:arch": "node tooling/arch/check-arch.js && node tooling/arch/check-sizes.js && node tooling/arch/check-literals.js",
		"scaffold": "ts-node tooling/scripts/scaffold/index.ts",
		"pr:check": "pnpm -w install && pnpm biome ci . && pnpm -w vitest run --coverage --reporter=dot && pnpm --filter database generate && pnpm --filter web e2e:ci"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^24.7.2",
		"dotenv-cli": "^10.0.0",
		"husky": "^9.1.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"ts-node": "^10.9.2",
		"zod": "^4.1.11",
		"vitest": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"turbo": "^2.5.8",
		"typescript": "5.9.3"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		}
	}
}
