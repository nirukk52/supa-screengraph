{
	"name": "supastarter-nextjs",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"build": "npx dotenv-cli -c -- turbo build",
		"dev": "npx dotenv-cli -c -- turbo dev --concurrency 15",
		"dev:restart": "node tooling/scripts/dev-restart.js",
		"start": "npx dotenv-cli -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"test": "pnpm -r --if-present test",
		"test:affected": "node tooling/scripts/test/affected.ts",
		"prepare": "husky",
		"lint:arch": "node tooling/arch/check-arch.js && node tooling/arch/check-sizes.js && node tooling/arch/check-literals.js",
		"scaffold": "ts-node tooling/scripts/scaffold/index.ts",
		"pr:checks": "pnpm run pr:check",
		"pr:check": "node tooling/scripts/pr-check.mjs",
		"build:backend": "tsc -b tooling/typescript/tsconfig.backend.json",
		"backend:lint": "pnpm run lint:arch && pnpm run lint:publint && pnpm run lint:deps",
		"lint:publint": "npx publint",
		"lint:deps": "dependency-cruiser --config tooling/arch/dependency-cruiser.cjs .",
		"backend:e2e": "pnpm --filter @sg/feature-agents-run build && pnpm -w vitest run packages/api/tests/agents-run.e2e.spec.ts",
		"backend:test": "pnpm run build:backend && pnpm run backend:lint && pnpm run backend:e2e"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@repo/tsconfig": "workspace:*",
		"@types/node": "^24.7.2",
		"dotenv-cli": "^10.0.0",
		"husky": "^9.1.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"ts-node": "^10.9.2",
		"zod": "^4.1.11",
		"vitest": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"turbo": "^2.5.8",
		"typescript": "5.9.3",
		"dependency-cruiser": "^17.1.0"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		}
	}
}
