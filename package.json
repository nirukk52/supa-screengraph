{
	"name": "supastarter-nextjs",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"build": "npx dotenv-cli -c -- turbo build",
		"dev": "npx dotenv-cli -c -- turbo dev --concurrency 15",
		"dev:restart": "node tooling/scripts/dev-restart.js",
		"start": "npx dotenv-cli -c -- turbo start",
		"lint": "biome lint . ",
		"check": "biome check",
		"clean": "turbo clean",
		"format": "biome format . --write",
		"test": "pnpm -r --if-present test",
		"test:db": "pnpm vitest run",
		"test:affected": "node tooling/scripts/test/affected.ts",
		"prepare": "husky",
		"lint:tsconfig": "node tooling/scripts/validate-tsconfig-extends.mjs",
		"lint:arch": "node tooling/arch/check-arch.js && node tooling/arch/check-sizes.js && node tooling/arch/check-literals.js",
		"scaffold": "ts-node tooling/scripts/scaffold/index.ts",
		"pr:checks": "pnpm run pr:check",
		"pr:check": "node tooling/scripts/pr-check.mjs",
		"build:backend": "tsc -b tooling/typescript/tsconfig.backend.json && node tooling/scripts/postbuild-rewrite-paths.mjs",
		"backend:lint": "pnpm run lint:tsconfig && pnpm run lint:arch && pnpm run lint:publint && pnpm run lint:deps",
		"lint:publint": "node tooling/scripts/run-publint.mjs",
		"lint:deps": "dependency-cruiser --config tooling/arch/dependency-cruiser.cjs .",
		"backend:e2e": "pnpm --filter @sg/feature-agents-run build && pnpm -w vitest run --config vitest.e2e.config.ts",
		"backend:test": "pnpm run build:backend && pnpm run backend:lint && pnpm run backend:e2e",
		"ci:act": "act pull_request -W tooling/ci/validate-prs.local.yml --container-architecture linux/amd64 --secret-file tooling/ci/act.env",
		"ci:act:lint": "act --job lint -W tooling/ci/validate-prs.local.yml --container-architecture linux/amd64 --secret-file tooling/ci/act.env",
		"ci:act:unit": "act --job unit_tests -W tooling/ci/validate-prs.local.yml --container-architecture linux/amd64 --secret-file tooling/ci/act.env",
		"ci:act:be": "act --job backend_e2e -W tooling/ci/validate-prs.local.yml --container-architecture linux/amd64 --secret-file tooling/ci/act.env",
		"ci:act:web": "act --job web_e2e -W tooling/ci/validate-prs.local.yml --container-architecture linux/amd64 --secret-file tooling/ci/act.env"
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@repo/tsconfig": "workspace:*",
		"@testcontainers/localstack": "^11.7.1",
		"@testcontainers/postgresql": "^11.7.1",
		"@types/node": "^24.7.2",
		"@vitest/coverage-v8": "^2.0.5",
		"dependency-cruiser": "^16.9.0",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^10.0.0",
		"husky": "^9.1.7",
		"ts-node": "^10.9.2",
		"turbo": "^2.5.8",
		"typescript": "5.9.3",
		"vitest": "^2.0.5",
		"vite-tsconfig-paths": "^5.1.1",
		"zod": "^4.1.12",
		"tsc-alias": "^1.8.8"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.0.0",
			"@types/react-dom": "19.0.0"
		}
	},
	"dependencies": {
		"awilix": "^12.0.5",
		"pg-listen": "^1.7.0",
		"rxjs": "^7.8.2"
	}
}
